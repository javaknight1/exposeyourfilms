extends layout

block content
  .container
      #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
          .panel.panel-primary
            .panel-heading
              .panel-title Log In
              |                         
              div(style='float:right; font-size: 80%; position: relative; top:-10px')
                a(href='#') Forgot password?
            |      
            |                     
            .panel-body(style='padding-top:30px')
              if message.length > 0
                #login-alert.alert.alert-danger.col-sm-12(style='') #{message}
              else
                #login-alert.alert.alert-danger.col-sm-12(style='display:none')
              |                 
              |                         
              form#loginform.form-horizontal(role='form' action='/login' method='post')
                .input-group(style='margin-bottom: 25px')
                  span.input-group-addon
                    i.glyphicon.glyphicon-user
                  |  
                  input#login-username.form-control(type='text', name='username', value='', placeholder='username or email')
                |                                 
                |                             
                .input-group(style='margin-bottom: 25px')
                  span.input-group-addon
                    i.glyphicon.glyphicon-lock
                  |  
                  input#login-password.form-control(type='password', name='password', placeholder='password')
                |                                     
                |                                 
                |                             
                .input-group
                  .checkbox
                    label
                      input#login-remember(type='checkbox', name='remember', value='1')
                      |  Remember me
                |                                 
                .form-group(style='margin-top:10px')
                  // Button
                  .col-sm-12.controls
                    button#btn-login.btn.btn-success(type='submit') Login  
                    |                                       
                    button#btn-fblogin.btn.btn-primary(href='#') Login with Facebook
                |                                 
                .form-group
                  .col-md-12.control
                    div(style='border-top: 1px solid#888; padding-top:15px; font-size:85%')
                      a(href='#') Forgot password?
                      br
                      | Don&apos;t have an account! 
                      a(href='/signup')
                        | Sign Up Here               